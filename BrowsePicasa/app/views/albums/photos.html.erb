<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="welcome-heading">
        <h1>Google Album Browser</h1>

        <h3>A Simple Picasa explorer by Sny</h3>

        <div class="list-group">
          <% @photos.each do |photo| %>
            <div class='list-group-item'>
              <h4 class="list-group-item-heading"><%= photo.title %></h4>

              <p class="list-group-item-text"><img src="<%= photo.image %>"></p>
              <textarea id="comment" cols="60" rows="6"></textarea>
              <button id="post_comment"
                      class="btn btn-success"
                      data-comment-url="/albums/<%= photo.album_id %>/photos/<%= photo.id %>/comment">
                Post
              </button>
            </div>
          <% end %>
        </div>

        <!--<form method="post" action="/home/logout">-->
        <button id="disconnect" class="btn btn-default">Logout</button>
        <!--</form>-->
      </div>
    </div>
  </div>

</div>

